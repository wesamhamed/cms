<h1>All Posts</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>View Post</th>
            <th>Date</th>
            <th>Edit Post</th>
            <th>Delete Post</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{_id}}</td>
            <td><img height="50" class="img-responsive" src="/uploads/{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a class="btn btn-info" href="/post/{{_id}}">View</a></td>
            <td>{{getTime date 'MMMM Do YYYY'}}</td>
            <td><a class="btn btn-info" href="/admin/posts/edit/{{_id}}">Edit</a></td>
            <td>
                <form action="/admin/posts/{{_id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>